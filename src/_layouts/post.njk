---
layout: base
schema: BlogPosting
---
<div class="breadcrumb" style="background-color: var(--color-primary)">
  <nav aria-label="breadcrumb" class="breadcrumb wrapper flow" style="color: var(--color-text-flipped)">
    <ol class="breadcrumb__list">
      <li class="breadcrumb__item">
        <a href="/" class="breadcrumb__link">Home</a><span class="separator" aria-hidden="true">/</span>
      </li>
      <li class="breadcrumb__item">
        <a href="/blog" class="breadcrumb__link">Blog</a><span class="separator" aria-hidden="true">/</span> 
      </li>
      <li class="breadcrumb__item" aria-current="page">
        {{ title }} 
      </li>
    </ol>
  </nav>
</div>
<article class="region h-entry" style="--region-space-top: var(--space-xl); background-color: var(--color-bg-article)">
  <div class="wrapper flow prose e-content">
    {# <h1 class="gradient-text">{{ title }}</h1> #}
    <h1 class="feature">{{ title }}</h1>

    {% if image %}
      <!-- image -->
      {% image image, imageAlt or title, credit, "eager", "feature u-photo" %}
    {% endif %}

    <p class="meta | cluster gutter-xs-s">
      <!-- date -->
      {% set definedDate = date %} {% include "partials/date.njk" %}
      {%
        if tags.length >
        1
      %}
        <!-- tags -->
        {% for tag in tags %}{% if tag != "posts" %}
          <a class="button p-category" rel="tag" href="/tags/{{ tag }}" data-small-button> {{ tag }} </a>
        {% endif %}{% endfor %}
      {% endif %}
    </p>

    {{ content | safe }}
    {% include 'partials/edit-on.njk' %}

  </div>

    


  <!--  h-card infos: https://indieweb.org/authorship -->
  <div hidden class="h-entry">
    <a class="u-url dt-published" href="{{ page.url | url | absoluteUrl(meta.url) }}">{{ title }}</a>
    <a class="p-author" rel="author" href="{{ meta.url }}">{{ meta.author.name }}</a>
    <img
      eleventy:ignore
      class="u-photo"
      src="{{ meta.author.avatar | url | absoluteUrl(meta.url) }}"
      alt="{{ meta.author.name }}"
    />
  </div>

  <div class="webmentions_cont">
    {# Get the webmentions for the current page #}
    {%- set currentPostMentions = webmentions | webmentionsForPage -%}
    {%- set mentionCount = webmentions | webmentionCountForPage -%}
    
    {% if mentionCount > 0 %}
      <h3>Webmentions ({{ mentionCount }})</h3>
      
      {# Comments/Replies #}
      {% if currentPostMentions.comments and currentPostMentions.comments.length > 0 %}
        <h4>Comments</h4>
        <ol id="webmentions-comments" class="webmentions__list">
          {% for mention in currentPostMentions.comments %}
            <li class="webmentions__item">
              {% set mention = mention %}{% include 'partials/webmention.njk' %}
            </li>
          {% endfor %}
        </ol>
      {% endif %}
      
      {# Likes #}
      {% if currentPostMentions.likes and currentPostMentions.likes.length > 0 %}
        <h4>Likes ({{ currentPostMentions.likes.length }})</h4>
        <div class="webmentions__likes">
          {% for mention in currentPostMentions.likes %}
            {% set mention = mention %}{% include 'partials/webmention.njk' %}
          {% endfor %}
        </div>
      {% endif %}
      
      {# Reposts #}
      {% if currentPostMentions.reposts and currentPostMentions.reposts.length > 0 %}
        <h4>Reposts ({{ currentPostMentions.reposts.length }})</h4>
        <ol id="webmentions-reposts" class="webmentions__list">
          {% for mention in currentPostMentions.reposts %}
            <li class="webmentions__item">
              {% set mention = mention %}{% include 'partials/webmention.njk' %}
            </li>
          {% endfor %}
        </ol>
      {% endif %}
    {% endif %}
  </div>
</article>

{%- css "local" -%}
  {%- include 'css/post.css' -%}
  {%- include 'css/footnotes.css' -%}
{%- endcss -%}
